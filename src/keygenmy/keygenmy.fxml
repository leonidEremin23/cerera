<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.text.Font?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="keygenmy.Controller">

      <Label text="Регистрация нового пользователя" textFill="#3d0985" GridPane.columnIndex="1">
         <font>
            <Font name="Arial Bold" size="14.0" />
         </font></Label>
      <TextField fx:id="txt_user" promptText="имя пользователя" GridPane.columnIndex="2" />
      <TextField fx:id="txt_result" editable="false" minWidth="-Infinity" prefWidth="320.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
      <Button fx:id="btn_check" mnemonicParsing="false" onAction="#onclick_btn_check" text="проверить" GridPane.columnIndex="2" GridPane.rowIndex="1" />
      <Button fx:id="btn_keygen" mnemonicParsing="false" onAction="#onclick_btn_keygen" text="регистрироваться на сервере" textFill="#a13264" GridPane.columnIndex="1" GridPane.rowIndex="2">
         <font>
            <Font name="System Bold" size="12.0" />
         </font></Button>
      <Label alignment="CENTER" maxWidth="1.7976931348623157E308" text="публичный ключ" textFill="#3a88b5" GridPane.columnIndex="1" GridPane.rowIndex="3" />
      <Label alignment="CENTER" maxWidth="1.7976931348623157E308" text="приватный ключ" textAlignment="RIGHT" textFill="#3a88b5" GridPane.columnIndex="2" GridPane.rowIndex="3" />
      <Button fx:id="btn_close" defaultButton="true" mnemonicParsing="false" onAction="#onclick_btn_close" text="Закрыть" GridPane.columnIndex="2" GridPane.halignment="RIGHT" GridPane.rowIndex="2" />
      <TextArea fx:id="ta_publicKey" prefHeight="200.0" prefWidth="320.0" promptText="публичный ключ" wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="4" />
      <TextArea fx:id="ta_privateKey" editable="false" prefHeight="200.0" prefWidth="320.0" promptText="приватный ключ" wrapText="true" GridPane.columnIndex="2" GridPane.rowIndex="4" />
      <Label text="сервер" fx:id="lbl_server" textFill="#340985" GridPane.columnIndex="1" GridPane.rowIndex="5" />

</GridPane>
