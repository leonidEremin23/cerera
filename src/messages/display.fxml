<GridPane xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="messages.Controller">
    <HBox spacing="5.0">
        <children>
            <TextField fx:id="txt_usr" editable="false" maxWidth="-Infinity" text="пользователь" />
            <TextField fx:id="txt_adresat" maxWidth="-Infinity" text="адресат" />
            <Button fx:id="btn_close" mnemonicParsing="false" onAction="#onclick_btn_close" text="закрыть" />
            <Button fx:id="btn_request" mnemonicParsing="false" onAction="#onclick_btn_request" text="опрос" />
        </children>
      <GridPane.margin>
         <Insets />
      </GridPane.margin>
    </HBox>
    <WebView fx:id="wv_messages" prefHeight="200.0" prefWidth="200.0" GridPane.rowIndex="1" />

    <TextArea fx:id="txt_send" prefHeight="50" GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <Button fx:id="btn_send" alignment="CENTER_RIGHT" mnemonicParsing="false" onAction="#onclick_btn_send" text="Отправить" GridPane.halignment="RIGHT" GridPane.rowIndex="4" />
    <TextArea fx:id="txt_stdout" prefHeight="80.0" prefWidth="200.0" GridPane.rowIndex="5" />



</GridPane>
