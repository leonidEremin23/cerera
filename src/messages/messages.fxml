<GridPane fx:id="txt" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="messages.Controller">

    <Label prefHeight="22.0" text="пользователь" GridPane.columnIndex="1" GridPane.rowIndex="1" />
    <Label prefHeight="22.0" text="получатель" GridPane.columnIndex="1" GridPane.rowIndex="2" />
    <Label prefHeight="22.0" text="передача" GridPane.columnIndex="1" GridPane.rowIndex="3" />
    <Label prefHeight="22.0" text="отправитель" GridPane.columnIndex="1" GridPane.rowIndex="4" />
    <Label prefHeight="22.0" text="прием" GridPane.columnIndex="1" GridPane.rowIndex="5" />

    <TextField fx:id="txt_usr" text="usr" GridPane.columnIndex="2" GridPane.rowIndex="1" editable="false" />
    <TextField fx:id="txt_to" GridPane.columnIndex="2" GridPane.rowIndex="2" />
    <ComboBox fx:id="cmb_users" onAction="#onaction_cmb_users" GridPane.columnIndex="3" GridPane.rowIndex="2" minWidth="200.0"/>

    <TextArea fx:id="txt_message" GridPane.columnIndex="2" GridPane.rowIndex="3" prefHeight="100" />
    <Button fx:id="btn_test" alignment="CENTER" mnemonicParsing="false" onAction="#onclick_btn_send" text="Отправить" GridPane.columnIndex="3" GridPane.halignment="RIGHT" GridPane.rowIndex="3" />

    <TextField fx:id="txt_sender" GridPane.columnIndex="2" GridPane.rowIndex="4" />
    <TextArea fx:id="txt_receive" GridPane.columnIndex="2" GridPane.rowIndex="5" prefHeight="100" />
    <Button fx:id="btn_receive" alignment="CENTER" mnemonicParsing="false" onAction="#onclick_btn_receive" text="Принять" GridPane.columnIndex="3" GridPane.halignment="RIGHT" GridPane.rowIndex="5" />

    <TextArea fx:id="txt_output" editable="false" prefHeight="100" promptText="standart output" GridPane.columnIndex="2" GridPane.rowIndex="6" />
    <TextArea fx:id="txt_errout" editable="false" prefHeight="100" promptText="error output" style="-fx-text-fill: red;" GridPane.columnIndex="2" GridPane.rowIndex="7" />

    <Button fx:id="btn_register" mnemonicParsing="false" onAction="#onclick_btn_register" text="регистрация" GridPane.columnIndex="2" GridPane.rowIndex="8" />


</GridPane>
